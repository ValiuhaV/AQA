							"});\r",
							"\r",
							"pm.test(\"Favourite image data should match\", function () {\r",
							"    const jsonData = pm.response.json();\r",
							"    const image_id = pm.environment.get(\"image_id\");\r",
							"    const image_url = pm.environment.get(\"image_url\");\r",
							"\r",
							"    const found = jsonData.some(f => \r",
							"        f.image &&\r",
							"        f.image.id === image_id &&\r",
							"        f.image.url === image_url\r",
							"    );\r",
							"    pm.expect(found, \"Image ID and URL should match\").to.be.true;\r",
