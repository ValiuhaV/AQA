							"\r",
							"const jsonData = pm.response.json();\r",
							"pm.environment.set(\"image_id\", jsonData[0].id);\r",
							"pm.environment.set(\"image_url\", jsonData[0].url);\r",
							"\r",
							"pm.test(\"Image ID is saved\", function () {\r",
							"    pm.expect(pm.environment.get(\"image_id\")).to.exist;\r",
							"});\r",
							"\r",
							"pm.test(\"Image URL is saved\", function () {\r",
							"    pm.expect(pm.environment.get(\"image_url\")).to.exist;\r",
